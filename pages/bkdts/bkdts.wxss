/* bkdts.wxml */
page{
  height: 100%;
  width: 100%;
  background-color: cornsilk;
  font-family: cursive;
}
.book{
  border-bottom: 2px solid whitesmoke;
}
.img{
  height: 130px;
  width: 90px;
}
.text{
  float:right;
  width:230px;
}
.tt{
  float: right;
  position:absolute;
  margin-top: 5px;
  font-weight: bold;
}
.ts{
  float:right;
  position:relative;
  font-size:13px;
  margin-top:36px;
  display: -webkit-box;
  color:#000000;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3;
  overflow: hidden;
  text-overflow:ellipsis;
}
.zz{
  font-size: 11px;
  font-weight:bolder;
}