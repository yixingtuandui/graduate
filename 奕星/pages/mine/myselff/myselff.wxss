.container{
  width: 95%;
  height: 100%;
  margin: 0 auto;
  overflow-y: scroll;
  padding: 0 0;
}
.avatar{
  width: 100%;
  height: 150rpx;
  line-height: 150rpx;
  position: relative;
}
.avatar::after{
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 1px;
  transform: scaleY(.5);
  background-color: #9D9D9D;
}

