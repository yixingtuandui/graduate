page{background-color: rgb(241, 241, 241)}
.books{width: 96%; margin: 0rpx 2%}
.imgs{width: 100%; height: 400rpx; display: flex-wrap}
.img{width: 35%; height: 100%}
.bookname{width: 65%; height: 100%; float: right; display: flex; align-items: center; font-weight: bold; color: rgb(233, 0, 0); font-family: '宋体'}
.brief{padding: 30rpx 0px; font-weight: bold; font-family: '宋体'}
.texts{width: 100%; height: 280rpx; display: flex-wrap; font-weight: bold; font-family: '宋体'}
.text{width: 50%; height: 60rpx; float: left; margin: 5rpx 0rpx; display: flex; align-items: center}
text{font-weight: normal; color: rgb(94, 94, 94)}
.but{width:  100%; height: 80rpx}
.button{width: 33.33333%; height: 100%; display: flex; float: left; font-size: 30rpx; flex-direction: column}
.buttons{width: 33.33333%; height: 100%; display: flex; float: right; font-size: 30rpx; flex-direction: column}
.show{display: flex}
.input{width: 65%; border: 1rpx solid rgb(211, 211, 211); color: red; font-weight: normal}
.box{width: 65%; height: 100%; border: 1rpx solid rgb(211, 211, 211); background-color: #ccc}
.status{width: 100%; height: 100%; display: flex; align-items: center; color: red}
.boxs{width: 32%; background-color: rgb(233, 233, 233); position: absolute; z-index: 1; margin: 95rpx 0rpx 0rpx 115rpx; color: rgb(240, 157, 157)}
.val{height: 60rpx; line-height: 60rpx; border-bottom: 1px solid rgb(160, 160, 160); display: flex; align-items: center; font-weight: normal; color: rgb(94, 94, 94)}